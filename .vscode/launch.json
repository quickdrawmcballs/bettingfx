{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "server",
            "cwd": "${workspaceFolder}/server",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "start-server"],
            "outputCapture": "std"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "client",
            "cwd": "${workspaceFolder}/client",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "start"],
            "outputCapture": "std"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome Debugger",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/client",
        },
        {
            "name": "dfd",
            "type": "pwa-node",
            "request": "launch",
            "program": "${workspaceFolder}\\lib\\main.js",
            "env": {"NODE_ENV":"debug"},
            "args": ["dfd"],
            "outputCapture": "std"
        },
        {
            "name": "nfl_odds",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}/server",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "main", "--", "nfl_odds","--refresh=true"],
            "outputCapture": "std"
        },
        {
            "name": "nba_odds",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}/server",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "main", "--", "nba_odds","--refresh=true"],
            "outputCapture": "std"
        },
        {
            "name": "nfl_season",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}/server",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "main", "--", "nfl_season","--refresh=true"],
            "outputCapture": "std"
        },
        {
            "name": "nba_season",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}/server",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "main", "--", "nba_season","--refresh=true"],
            "outputCapture": "std"
        },
        {
            "name": "neo4j",
            "type": "pwa-node",
            "request": "launch",
            "program": "${workspaceFolder}\\lib\\utils\\neo4j.js",
            "outputCapture": "std"
        },
        {
            "name": "nba_play",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}/server",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "main", "--", "nba_play","--refresh=false"],
            "outputCapture": "std"
        },
        {
            "name": "mlb_season",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}/server",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "main", "--", "mlb_season","--refresh=true"],
            "outputCapture": "std"
        }
    ]
}